<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/background"
        tools:context=".View.UserProfile.UserDetailsActivity">
        <com.google.android.material.appbar.AppBarLayout
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="@color/colorPrimary"
            android:id="@+id/toolbar_setting">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">
                <ImageView
                    android:id="@+id/details_back_btn"
                    android:layout_width="70dp"
                    android:layout_height="match_parent"
                    android:padding="16dp"
                    app:tint="@color/black" />
                <TextView
                    android:id="@+id/cart_option_title"
                    style="@style/TextAppearance.AppCompat.Medium"
                    android:maxLines="1"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    android:text="Your Profile"
                    android:textColor="@color/black" />
            </LinearLayout>
        </com.google.android.material.appbar.AppBarLayout>
        <androidx.appcompat.widget.Toolbar
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:id="@+id/appbar"
            android:background="@color/card_back"
            android:layout_below="@+id/toolbar_setting">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="Student Information"
                android:gravity="center"
                android:textColor="@color/black"
                style="@style/TextAppearance.AppCompat.Title"/>
        </androidx.appcompat.widget.Toolbar>
        <ScrollView
            android:background="@color/background"
            android:layout_below="@+id/appbar"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <RelativeLayout
                android:background="@color/background"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <RelativeLayout
                    android:id="@+id/related3"
                    android:layout_marginStart="10dp"
                    android:layout_marginEnd="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <LinearLayout
                        android:id="@+id/user_info_lyr"
                        android:layout_marginTop="10dp"
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <LinearLayout
                            android:orientation="vertical"
                            android:layout_width="0dp"
                            android:layout_weight="5"
                            android:layout_height="match_parent">
                            <LinearLayout
                                android:layout_width="match_parent"
                                android:orientation="horizontal"
                                android:layout_height="wrap_content"
                                android:weightSum="3">
                                <TextView
                                    android:layout_width="0dp"
                                    android:layout_weight="1"
                                    android:layout_height="wrap_content"
                                    android:text="Name: "
                                    android:textColor="@color/black"
                                    style="@style/TextAppearance.AppCompat.Small"
                                    />
                                <TextView
                                    android:id="@+id/account_nameId"
                                    android:layout_width="0dp"
                                    android:layout_weight="2"
                                    android:layout_height="wrap_content"
                                    android:text=""
                                    android:textColor="@color/black"
                                    style="@style/TextAppearance.AppCompat.Small"
                                    />
                            </LinearLayout>
                            <LinearLayout
                                android:layout_width="match_parent"
                                android:orientation="horizontal"
                                android:layout_height="wrap_content"
                                android:weightSum="3">
                                <TextView
                                    android:layout_width="0dp"
                                    android:layout_weight="1"
                                    android:layout_height="wrap_content"
                                    android:text="Institute: "
                                    android:textColor="@color/black"
                                    style="@style/TextAppearance.AppCompat.Small"
                                    />
                                <TextView
                                    android:id="@+id/account_instituteId"
                                    android:layout_width="0dp"
                                    android:layout_weight="2"
                                    android:layout_height="wrap_content"
                                    android:text=""
                                    android:maxLines="1"
                                    android:textColor="@color/black"
                                    style="@style/TextAppearance.AppCompat.Small"
                                    />
                            </LinearLayout>
                            <LinearLayout
                                android:layout_width="match_parent"
                                android:orientation="horizontal"
                                android:layout_height="wrap_content"
                                android:weightSum="3">
                                <TextView
                                    android:layout_width="0dp"
                                    android:layout_weight="1"
                                    android:layout_height="wrap_content"
                                    android:text="Roll: "
                                    android:textColor="@color/black"
                                    style="@style/TextAppearance.AppCompat.Small"
                                    />
                                <TextView
                                    android:id="@+id/account_rollId"
                                    android:layout_width="0dp"
                                    android:layout_weight="2"
                                    android:layout_height="wrap_content"
                                    android:text=""
                                    android:textColor="@color/black"
                                    style="@style/TextAppearance.AppCompat.Small"
                                    />
                            </LinearLayout>
                            <LinearLayout
                                android:layout_width="match_parent"
                                android:orientation="horizontal"
                                android:layout_height="wrap_content"
                                android:weightSum="3">
                                <TextView
                                    android:layout_width="0dp"
                                    android:layout_weight="1"
                                    android:layout_height="wrap_content"
                                    android:text="Registration: "
                                    android:maxLines="1"
                                    android:textColor="@color/black"
                                    style="@style/TextAppearance.AppCompat.Small"
                                    />
                                <TextView
                                    android:id="@+id/account_regiId"
                                    android:layout_width="0dp"
                                    android:layout_weight="2"
                                    android:layout_height="wrap_content"
                                    android:text=""
                                    android:textColor="@color/black"
                                    style="@style/TextAppearance.AppCompat.Small"
                                    />
                            </LinearLayout>
                            <LinearLayout
                                android:layout_width="match_parent"
                                android:orientation="horizontal"
                                android:layout_height="wrap_content"
                                android:weightSum="3">
                                <TextView
                                    android:layout_width="0dp"
                                    android:layout_weight="1"
                                    android:layout_height="wrap_content"
                                    android:text="Phone: "
                                    android:textColor="@color/black"
                                    style="@style/TextAppearance.AppCompat.Small"
                                    />
                                <TextView
                                    android:id="@+id/account_phoneId"
                                    android:layout_width="0dp"
                                    android:layout_weight="2"
                                    android:layout_height="wrap_content"
                                    android:text=""
                                    android:textColor="@color/black"
                                    style="@style/TextAppearance.AppCompat.Small"
                                    />
                            </LinearLayout>
                            <LinearLayout
                                android:layout_width="match_parent"
                                android:orientation="horizontal"
                                android:layout_height="wrap_content"
                                android:weightSum="3">
                                <TextView
                                    android:layout_width="0dp"
                                    android:layout_weight="1"
                                    android:layout_height="wrap_content"
                                    android:text="Email: "
                                    android:textColor="@color/black"
                                    style="@style/TextAppearance.AppCompat.Small"
                                    />
                                <TextView
                                    android:id="@+id/account_emailId"
                                    android:layout_width="0dp"
                                    android:layout_weight="2"
                                    android:layout_height="wrap_content"
                                    android:text=""
                                    android:maxLines="1"
                                    android:textColor="@color/black"
                                    style="@style/TextAppearance.AppCompat.Small"
                                    />
                            </LinearLayout>
                            <LinearLayout
                                android:layout_width="match_parent"
                                android:orientation="horizontal"
                                android:layout_height="wrap_content"
                                android:weightSum="3">
                                <TextView
                                    android:layout_width="0dp"
                                    android:layout_weight="1"
                                    android:layout_height="wrap_content"
                                    android:text="Department: "
                                    android:textColor="@color/black"
                                    style="@style/TextAppearance.AppCompat.Small"
                                    />
                                <TextView
                                    android:id="@+id/account_departmentId"
                                    android:layout_width="0dp"
                                    android:layout_weight="2"
                                    android:layout_height="wrap_content"
                                    android:text=""
                                    android:maxLines="1"
                                    android:textColor="@color/black"
                                    style="@style/TextAppearance.AppCompat.Small"
                                    />
                            </LinearLayout>
                            <LinearLayout
                                android:layout_width="match_parent"
                                android:orientation="horizontal"
                                android:layout_height="wrap_content"
                                android:weightSum="3">
                                <TextView
                                    android:layout_width="0dp"
                                    android:layout_weight="1"
                                    android:layout_height="wrap_content"
                                    android:text="Semester: "
                                    android:textColor="@color/black"
                                    style="@style/TextAppearance.AppCompat.Small"
                                    />
                                <TextView
                                    android:id="@+id/account_semesterId"
                                    android:layout_width="0dp"
                                    android:layout_weight="2"
                                    android:layout_height="wrap_content"
                                    android:text=""
                                    android:textColor="@color/black"
                                    style="@style/TextAppearance.AppCompat.Small"
                                    />
                            </LinearLayout>
                            <LinearLayout
                                android:layout_width="match_parent"
                                android:orientation="horizontal"
                                android:layout_height="wrap_content"
                                android:weightSum="3">
                                <TextView
                                    android:layout_width="0dp"
                                    android:layout_weight="1"
                                    android:layout_height="wrap_content"
                                    android:text="Blood group: "
                                    android:textColor="@color/black"
                                    style="@style/TextAppearance.AppCompat.Small"
                                    />
                                <TextView
                                    android:id="@+id/account_bloodId"
                                    android:layout_width="0dp"
                                    android:layout_weight="2"
                                    android:layout_height="wrap_content"
                                    android:text=""
                                    android:textColor="@color/black"
                                    style="@style/TextAppearance.AppCompat.Small"
                                    />
                            </LinearLayout>
                            <LinearLayout
                                android:layout_width="match_parent"
                                android:orientation="horizontal"
                                android:layout_height="wrap_content"
                                android:weightSum="3">
                                <TextView
                                    android:layout_width="0dp"
                                    android:layout_weight="1"
                                    android:layout_height="wrap_content"
                                    android:text="Birthday: "
                                    android:textColor="@color/black"
                                    style="@style/TextAppearance.AppCompat.Small"
                                    />
                                <TextView
                                    android:id="@+id/account_date_of_birthId"
                                    android:layout_width="0dp"
                                    android:layout_weight="2"
                                    android:layout_height="wrap_content"
                                    android:text=""
                                    android:textColor="@color/black"
                                    style="@style/TextAppearance.AppCompat.Small"
                                    />
                            </LinearLayout>
                        </LinearLayout>
                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:gravity="center_vertical"
                            android:layout_height="match_parent">
                            <Button
                                android:id="@+id/edit_profileId"
                                android:layout_width="match_parent"
                                android:layout_height="30dp"
                                android:text="Edit"
                                android:background="@color/colorPrimary"
                                android:textColor="@color/black"
                                android:layout_margin="8dp"/>
                        </LinearLayout>
                    </LinearLayout>
                    <View
                        android:layout_marginTop="20dp"
                        android:id="@+id/view5"
                        android:layout_below="@+id/user_info_lyr"
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="@color/black"/>
                </RelativeLayout>
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/result_content"
                    android:padding="10dp"
                    android:layout_below="@+id/related3">

                    <LinearLayout
                        android:id="@+id/user_result_info_lyr"
                        android:layout_marginTop="10dp"
                        android:orientation="vertical"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:orientation="horizontal"
                            android:layout_height="50dp"
                            android:gravity="center_vertical"
                            android:weightSum="3">
                            <TextView
                                android:layout_width="0dp"
                                android:layout_weight="2"
                                android:layout_height="wrap_content"
                                android:text="All Semester Result"
                                android:textColor="@color/black"
                                style="@style/TextAppearance.AppCompat.Medium"
                                />
                            <Button
                                android:id="@+id/edit_gpaId"
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight=".8"
                                android:text="Edit"
                                android:background="@color/colorPrimary"
                                android:textColor="@color/black"
                                android:layout_margin="8dp"/>
                        </LinearLayout>
                        <View
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:background="@color/gray"/>
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:orientation="horizontal"
                            android:layout_height="wrap_content"
                            android:weightSum="3">
                            <TextView
                                android:layout_width="0dp"
                                android:layout_weight="2"
                                android:layout_height="wrap_content"
                                android:text="1st Semester:"
                                android:textColor="@color/black"
                                style="@style/TextAppearance.AppCompat.Small"
                                />

                            <TextView
                                android:id="@+id/gpa1"
                                style="@style/TextAppearance.AppCompat.Small"
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_marginEnd="20dp"
                                android:layout_weight="1"
                                android:gravity="center"
                                android:text=""
                                android:textColor="@color/black" />
                        </LinearLayout>
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:orientation="horizontal"
                            android:layout_height="wrap_content"
                            android:weightSum="3">
                            <TextView
                                android:layout_width="0dp"
                                android:layout_weight="2"
                                android:layout_height="wrap_content"
                                android:text="2nd Semester: "
                                android:textColor="@color/black"
                                style="@style/TextAppearance.AppCompat.Small"
                                />

                            <TextView
                                android:id="@+id/gpa2"
                                style="@style/TextAppearance.AppCompat.Small"
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_marginEnd="20dp"
                                android:layout_weight="1"
                                android:gravity="center"
                                android:text=""
                                android:textColor="@color/black" />
                        </LinearLayout>
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:orientation="horizontal"
                            android:layout_height="wrap_content"
                            android:weightSum="3">
                            <TextView
                                android:layout_width="0dp"
                                android:layout_weight="2"
                                android:layout_height="wrap_content"
                                android:text="3rd Semester:"
                                android:textColor="@color/black"
                                style="@style/TextAppearance.AppCompat.Small"
                                />

                            <TextView
                                android:id="@+id/gpa3"
                                style="@style/TextAppearance.AppCompat.Small"
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_marginEnd="20dp"
                                android:layout_weight="1"
                                android:gravity="center"
                                android:text=""
                                android:textColor="@color/black" />
                        </LinearLayout>
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:orientation="horizontal"
                            android:layout_height="wrap_content"
                            android:weightSum="3">
                            <TextView
                                android:layout_width="0dp"
                                android:layout_weight="2"
                                android:layout_height="wrap_content"
                                android:text="4th Semester:"
                                android:textColor="@color/black"
                                style="@style/TextAppearance.AppCompat.Small"
                                />
                            <TextView
                                android:id="@+id/gpa4"
                                android:layout_width="0dp"
                                android:layout_weight="1"
                                android:layout_height="wrap_content"
                                android:text=""
                                android:gravity="center"
                                android:layout_marginEnd="20dp"
                                android:textColor="@color/black"
                                style="@style/TextAppearance.AppCompat.Small"
                                />
                        </LinearLayout>
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:orientation="horizontal"
                            android:layout_height="wrap_content"
                            android:weightSum="3">
                            <TextView
                                android:layout_width="0dp"
                                android:layout_weight="2"
                                android:layout_height="wrap_content"
                                android:text="5th Semester:"
                                android:textColor="@color/black"
                                style="@style/TextAppearance.AppCompat.Small"
                                />
                            <TextView
                                android:id="@+id/gpa5"
                                android:layout_width="0dp"
                                android:layout_weight="1"
                                android:layout_height="wrap_content"
                                android:text=""
                                android:gravity="center"
                                android:layout_marginEnd="20dp"
                                android:textColor="@color/black"
                                style="@style/TextAppearance.AppCompat.Small"
                                />
                        </LinearLayout>
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:orientation="horizontal"
                            android:layout_height="wrap_content"
                            android:weightSum="3">
                            <TextView
                                android:layout_width="0dp"
                                android:layout_weight="2"
                                android:layout_height="wrap_content"
                                android:text="6th Semester:"
                                android:textColor="@color/black"
                                style="@style/TextAppearance.AppCompat.Small"
                                />
                            <TextView
                                android:id="@+id/gpa6"
                                android:layout_width="0dp"
                                android:layout_weight="1"
                                android:layout_height="wrap_content"
                                android:text=""
                                android:gravity="center"
                                android:layout_marginEnd="20dp"
                                android:textColor="@color/black"
                                style="@style/TextAppearance.AppCompat.Small"
                                />
                        </LinearLayout>
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:orientation="horizontal"
                            android:layout_height="wrap_content"
                            android:weightSum="3">
                            <TextView
                                android:layout_width="0dp"
                                android:layout_weight="2"
                                android:layout_height="wrap_content"
                                android:text="7th Semester:"
                                android:textColor="@color/black"
                                style="@style/TextAppearance.AppCompat.Small"
                                />
                            <TextView
                                android:id="@+id/gpa7"
                                android:layout_width="0dp"
                                android:layout_weight="1"
                                android:layout_height="wrap_content"
                                android:text=""
                                android:gravity="center"
                                android:layout_marginEnd="20dp"
                                android:textColor="@color/black"
                                style="@style/TextAppearance.AppCompat.Small"
                                />
                        </LinearLayout>
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:orientation="horizontal"
                            android:layout_height="wrap_content"
                            android:weightSum="3">
                            <TextView
                                android:layout_width="0dp"
                                android:layout_weight="2"
                                android:layout_height="wrap_content"
                                android:text="8th Semester:"
                                android:textColor="@color/black"
                                style="@style/TextAppearance.AppCompat.Small"
                                />
                            <TextView
                                android:id="@+id/gpa8"
                                android:layout_width="0dp"
                                android:layout_weight="1"
                                android:layout_height="wrap_content"
                                android:text=""
                                android:gravity="center"
                                android:layout_marginEnd="20dp"
                                android:textColor="@color/black"
                                style="@style/TextAppearance.AppCompat.Small"
                                />
                        </LinearLayout>
                        <View
                            android:layout_marginTop="5dp"
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:textColor="@color/black"/>
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:orientation="horizontal"
                            android:layout_height="wrap_content"
                            android:weightSum="3">
                            <TextView
                                android:layout_width="0dp"
                                android:layout_weight="2"
                                android:layout_height="wrap_content"
                                android:text="Total:"
                                android:textColor="@color/black"
                                style="@style/TextAppearance.AppCompat.Small"
                                />
                            <TextView
                                android:id="@+id/cgpa"
                                android:layout_width="0dp"
                                android:layout_weight="1"
                                android:layout_height="wrap_content"
                                android:text=""
                                android:gravity="center"
                                android:layout_marginEnd="20dp"
                                android:textColor="@color/black"
                                style="@style/TextAppearance.AppCompat.Small"
                                />
                        </LinearLayout>
                    </LinearLayout>
                </RelativeLayout>
                <RelativeLayout
                    android:id="@+id/userLogout"
                    android:layout_below="@+id/result_content"
                    android:layout_marginTop="10dp"
                    android:visibility="visible"
                    android:gravity="center_horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <androidx.cardview.widget.CardView
                        android:id="@+id/user_logoutCardId"
                        app:cardBackgroundColor="@color/colorPrimary"
                        android:foreground="?android:attr/selectableItemBackground"
                        app:cardElevation="6dp"
                        android:layout_marginStart="8dp"
                        android:layout_marginEnd="8dp"
                        android:layout_marginBottom="8dp"
                        app:cardCornerRadius="4dp"
                        android:layout_width="match_parent"
                        tools:ignore="NestedWeights"
                        android:layout_height="50dp">
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:gravity="center"
                            android:padding="4dp"
                            android:orientation="horizontal"
                            >
                            <ImageView
                                android:layout_width="30dp"
                                android:layout_height="30dp"
                                android:tint="@color/white"
                                android:src="@drawable/logout"/>
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Logout"
                                android:textStyle="bold"
                                android:textColor="@color/black"
                                android:textSize="16sp"
                                android:layout_marginStart="10dp"
                                />
                        </LinearLayout>
                    </androidx.cardview.widget.CardView>
                </RelativeLayout>
            </RelativeLayout>
        </ScrollView>
    </RelativeLayout>
</layout>