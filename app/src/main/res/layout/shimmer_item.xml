<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="90dp"
    android:layout_marginStart="4dp"
    android:layout_marginEnd="4dp"
    android:layout_marginTop="4dp"
    android:layout_marginBottom="4dp"
    style="@style/home_card2">
    <RelativeLayout
        android:id="@+id/relative_1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="10dp"
        android:background="@drawable/white_btn"
        >
        <ImageView
            android:id="@+id/calendrId"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:background="@color/dark_back"
            />
        <TextView
            android:id="@+id/notice_dateId"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            style="@style/TextAppearance.AppCompat.Small"
            android:maxLines="1"
            android:background="@color/dark_back"
            android:layout_toEndOf="@id/calendrId"
            android:layout_marginStart="10dp"
            />
        <TextView
            android:id="@+id/notice_timeId"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            style="@style/TextAppearance.AppCompat.Small"
            android:maxLines="1"
            android:background="@color/dark_back"
            android:layout_toEndOf="@id/notice_dateId"
            android:layout_marginStart="10dp"
            />
        <TextView
            android:id="@+id/notice_titleId"
            android:layout_below="@+id/calendrId"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/dark_back"
            style="@style/TextAppearance.AppCompat.Small"
            android:maxLines="2"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"/>
    </RelativeLayout>

</androidx.cardview.widget.CardView>