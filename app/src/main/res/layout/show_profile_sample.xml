<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/background"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <TextView
        android:id="@+id/manage_textId"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="manage your profile"
        style="@style/TextAppearance.AppCompat.Title"
        android:padding="20dp"/>
    <TextView
        android:id="@+id/manage_text2Id"
        android:layout_below="@+id/manage_textId"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="my profile"
        style="@style/TextAppearance.AppCompat.Small"
        android:paddingStart="20dp"/>
    <RelativeLayout
        android:id="@+id/go_to_your_profileId"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/manage_text2Id">
        <androidx.cardview.widget.CardView
            android:id="@+id/goto_userListId"
            android:layout_width="match_parent"
            android:layout_margin="20dp"
            app:cardCornerRadius="10dp"
            app:cardBackgroundColor="#1B131C"
            android:layout_height="wrap_content">
            <LinearLayout
                android:padding="20dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <TextView
                    android:id="@+id/btm_userNameId"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="top"
                    android:maxLines="1"
                    android:textStyle="bold"
                    android:textColor="@color/background"
                    style="@style/TextAppearance.AppCompat.Medium"
                    android:text="User Name..."/>
                <TextView
                    android:id="@+id/btm_userRollId"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="bottom"
                    android:maxLines="1"
                    android:textColor="@color/card_back"
                    style="@style/TextAppearance.AppCompat.Small"
                    android:text="20MH1A050..."/>
            </LinearLayout>
            <ImageView
                android:layout_width="50dp"
                android:layout_height="90dp"
                android:src="@drawable/right"
                android:layout_gravity="end"
                android:paddingEnd="15dp"
                android:id="@+id/show_user_listId"/>
        </androidx.cardview.widget.CardView>
    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/show_profile_textId"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/go_to_your_profileId">
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_marginTop="0dp"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            app:cardCornerRadius="10dp"
            app:cardBackgroundColor="#CCCBCC"
            android:layout_height="wrap_content">
            <LinearLayout
                android:padding="20dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="top"
                    android:maxLines="1"
                    android:textStyle="bold"
                    android:textColor="@color/black"
                    style="@style/TextAppearance.AppCompat.Medium"
                    android:text="add profile of your loved ones"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="bottom"
                    android:maxLines="1"
                    android:textColor="@color/copper"
                    style="@style/TextAppearance.AppCompat.Small"
                    android:text="Everyone is available hear"/>
            </LinearLayout>
        </androidx.cardview.widget.CardView>
    </RelativeLayout>
    <RelativeLayout
        android:layout_below="@+id/show_profile_textId"
        android:layout_width="match_parent"
        android:gravity="center"
        android:layout_height="wrap_content">
        <Button
            android:visibility="visible"
            android:id="@+id/add_profileId"
            android:layout_marginTop="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:paddingStart="10dp"
            android:paddingEnd="10dp"
            android:layout_marginBottom="20dp"
            android:text="add a profile"
            android:background="@color/yellow"/>
        <Button
            android:visibility="invisible"
            android:id="@+id/edit_profileId"
            android:layout_marginTop="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:paddingStart="10dp"
            android:paddingEnd="10dp"
            android:layout_marginBottom="20dp"
            android:text="edit profile"
            android:background="@color/yellow"/>
    </RelativeLayout>

</RelativeLayout>