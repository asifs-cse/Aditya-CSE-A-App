<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".View.Routine.WeeklyRoutineActivity">
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <LinearLayout
                    android:background="@color/colorPrimary"
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:id="@+id/r_instituteId"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Aditya College of Engineering"
                        style="@style/TextAppearance.AppCompat.Medium"
                        android:textColor="@color/black"
                        android:gravity="center"
                        android:layout_marginTop="5dp"/>
                    <LinearLayout
                        android:background="@color/colorPrimary"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">
                        <TextView
                            android:id="@+id/r_techId"
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:layout_height="wrap_content"
                            android:text="Computer Science and Engineering"
                            style="@style/TextAppearance.AppCompat.Small"
                            android:textColor="@color/black"
                            android:gravity="center"
                            android:layout_marginTop="5dp"/>
                    </LinearLayout>
                    <TextView
                        android:id="@+id/r_semesterId"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text=""
                        style="@style/TextAppearance.AppCompat.Small"
                        android:textColor="@color/black"
                        android:gravity="center" />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="20dp"
                    android:weightSum="8"
                    android:orientation="horizontal">
                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:padding="5dp"
                        android:gravity="center"
                        android:textSize="10sp"
                        android:background="@color/copper"
                        tools:ignore="SmallSp" />
                    <TextView
                        android:text="1"
                        android:textColor="@color/colorWhite"
                        style="@style/routine_time_style"
                        />
                    <TextView
                        android:text="2"
                        android:textColor="@color/colorWhite"
                        style="@style/routine_time_style"
                        />
                    <TextView
                        android:text="3"
                        android:textColor="@color/colorWhite"
                        style="@style/routine_time_style"
                        />
                    <TextView
                        android:text="4"
                        android:textColor="@color/colorWhite"
                        style="@style/routine_time_style"
                        />
                    <TextView
                        android:text="5"
                        android:textColor="@color/colorWhite"
                        style="@style/routine_time_style"
                        />
                    <TextView
                        android:text="6"
                        android:textColor="@color/colorWhite"
                        style="@style/routine_time_style"
                        />
                    <TextView
                        android:text="7"
                        android:textColor="@color/colorWhite"
                        style="@style/routine_time_style"
                        />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:weightSum="8"
                    android:orientation="horizontal">
                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:text="Time\nDate"
                        android:padding="5dp"
                        android:background="@color/copper"
                        android:layout_margin="0.5dp"
                        android:gravity="center"
                        android:textColor="@color/yellow"
                        android:textSize="12dp"
                        style="@style/TextAppearance.AppCompat.Small"/>
                    <TextView
                        android:id="@+id/r_time1"
                        style="@style/routine_time_style"
                        />
                    <TextView
                        android:id="@+id/r_time2"
                        style="@style/routine_time_style"
                        />
                    <TextView
                        android:id="@+id/r_time3"
                        style="@style/routine_time_style"
                        />
                    <TextView
                        android:id="@+id/r_time4"
                        style="@style/routine_time_style"
                        />
                    <TextView
                        android:id="@+id/r_time5"
                        style="@style/routine_time_style"
                        />
                    <TextView
                        android:id="@+id/r_time6"
                        style="@style/routine_time_style"
                        />
                    <TextView
                        android:id="@+id/r_time7"
                        style="@style/routine_time_style"
                        />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:weightSum="8"
                    android:orientation="horizontal">
                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:text="Monday"
                        android:padding="5dp"
                        android:background="@color/copper"
                        android:layout_margin="0.5dp"
                        android:gravity="center"
                        android:textColor="@color/yellow"
                        style="@style/TextAppearance.AppCompat.Small"/>
                    <TextView
                        android:id="@+id/mon_1Id"
                        style="@style/routine_text_style"
                        />
                    <TextView
                        android:id="@+id/mon_2Id"
                        style="@style/routine_text_style"/>
                    <TextView
                        android:id="@+id/mon_3Id"
                        style="@style/routine_text_style"/>
                    <TextView
                        android:id="@+id/mon_4Id"
                        style="@style/routine_text_style"/>
                    <TextView
                        android:id="@+id/mon_5Id"
                        style="@style/routine_text_style"/>
                    <TextView
                        android:id="@+id/mon_6Id"
                        style="@style/routine_text_style"/>
                    <TextView
                        android:id="@+id/mon_7Id"
                        style="@style/routine_text_style"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:weightSum="8"
                    android:orientation="horizontal">
                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:text="Tuesday"
                        android:padding="5dp"
                        android:background="@color/copper"
                        android:layout_margin="0.5dp"
                        android:gravity="center"
                        android:textColor="@color/yellow"
                        style="@style/TextAppearance.AppCompat.Small"/>
                    <TextView
                        android:id="@+id/tues_1Id"
                        style="@style/routine_text_style"/>
                    <TextView
                        android:id="@+id/tues_2Id"
                        style="@style/routine_text_style"/>
                    <TextView
                        android:id="@+id/tues_3Id"
                        style="@style/routine_text_style"/>
                    <TextView
                        android:id="@+id/tues_4Id"
                        style="@style/routine_text_style"/>
                    <TextView
                        android:id="@+id/tues_5Id"
                        style="@style/routine_text_style"/>
                    <TextView
                        android:id="@+id/tues_6Id"
                        style="@style/routine_text_style"/>
                    <TextView
                        android:id="@+id/tues_7Id"
                        style="@style/routine_text_style"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:weightSum="8"
                    android:orientation="horizontal">
                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:text="Wednesday"
                        android:padding="5dp"
                        android:background="@color/copper"
                        android:layout_margin="0.5dp"
                        android:gravity="center"
                        android:textColor="@color/yellow"
                        style="@style/TextAppearance.AppCompat.Small"/>
                    <TextView
                        android:id="@+id/wed_1Id"
                        style="@style/routine_text_style"/>
                    <TextView
                        android:id="@+id/wed_2Id"
                        style="@style/routine_text_style"/>
                    <TextView
                        android:id="@+id/wed_3Id"
                        style="@style/routine_text_style"/>
                    <TextView
                        android:id="@+id/wed_4Id"
                        style="@style/routine_text_style"/>
                    <TextView
                        android:id="@+id/wed_5Id"
                        style="@style/routine_text_style"/>
                    <TextView
                        android:id="@+id/wed_6Id"
                        style="@style/routine_text_style"/>
                    <TextView
                        android:id="@+id/wed_7Id"
                        style="@style/routine_text_style"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:weightSum="8"
                    android:orientation="horizontal">
                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:text="Thursday"
                        android:padding="5dp"
                        android:background="@color/copper"
                        android:layout_margin="0.5dp"
                        android:gravity="center"
                        android:textColor="@color/yellow"
                        style="@style/TextAppearance.AppCompat.Small"/>
                    <TextView
                        android:id="@+id/thur_1Id"
                        style="@style/routine_text_style"/>
                    <TextView
                        android:id="@+id/thur_2Id"
                        style="@style/routine_text_style"/>
                    <TextView
                        android:id="@+id/thur_3Id"
                        style="@style/routine_text_style"/>
                    <TextView
                        android:id="@+id/thur_4Id"
                        style="@style/routine_text_style"/>
                    <TextView
                        android:id="@+id/thur_5Id"
                        style="@style/routine_text_style"/>
                    <TextView
                        android:id="@+id/thur_6Id"
                        style="@style/routine_text_style"/>
                    <TextView
                        android:id="@+id/thur_7Id"
                        style="@style/routine_text_style"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:weightSum="8"
                    android:orientation="horizontal">
                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:text="Friday"
                        android:padding="5dp"
                        android:background="@color/copper"
                        android:layout_margin="0.5dp"
                        android:gravity="center"
                        android:textColor="@color/yellow"
                        style="@style/TextAppearance.AppCompat.Small"/>
                    <TextView
                        android:id="@+id/fri_1Id"
                        style="@style/routine_text_style"/>
                    <TextView
                        android:id="@+id/fri_2Id"
                        style="@style/routine_text_style"/>
                    <TextView
                        android:id="@+id/fri_3Id"
                        style="@style/routine_text_style"/>
                    <TextView
                        android:id="@+id/fri_4Id"
                        style="@style/routine_text_style"/>
                    <TextView
                        android:id="@+id/fri_5Id"
                        style="@style/routine_text_style"/>
                    <TextView
                        android:id="@+id/fri_6Id"
                        style="@style/routine_text_style"/>
                    <TextView
                        android:id="@+id/fri_7Id"
                        style="@style/routine_text_style"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:weightSum="8"
                    android:orientation="horizontal">
                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:text="Saturday"
                        android:padding="5dp"
                        android:background="@color/copper"
                        android:layout_margin="0.5dp"
                        android:gravity="center"
                        android:textColor="@color/yellow"
                        style="@style/TextAppearance.AppCompat.Small"/>
                    <TextView
                        android:id="@+id/sata_1Id"
                        style="@style/routine_text_style"/>
                    <TextView
                        android:id="@+id/sata_2Id"
                        style="@style/routine_text_style"/>
                    <TextView
                        android:id="@+id/sata_3Id"
                        style="@style/routine_text_style"/>
                    <TextView
                        android:id="@+id/sata_4Id"
                        style="@style/routine_text_style"/>
                    <TextView
                        android:id="@+id/sata_5Id"
                        style="@style/routine_text_style"/>
                    <TextView
                        android:id="@+id/sata_6Id"
                        style="@style/routine_text_style"/>
                    <TextView
                        android:id="@+id/sata_7Id"
                        style="@style/routine_text_style"/>
                </LinearLayout>
            </LinearLayout>
        </ScrollView>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>