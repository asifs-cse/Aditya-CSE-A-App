<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <RelativeLayout
        android:id="@+id/rl_1"
        android:padding="5dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <androidx.cardview.widget.CardView
            android:id="@+id/teacher_info_card"
            android:layout_width="match_parent"
            style="@style/home_card2"
            android:layout_marginTop="4dp"
            android:layout_height="wrap_content">
            <LinearLayout
                android:id="@+id/result_1"
                android:padding="5dp"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="150dp">
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="150dp"
                    android:orientation="vertical"
                    android:padding="5dp"
                    android:layout_weight="1.3">
                    <ImageView
                        android:id="@+id/teacher_imageId"
                        android:scaleType="fitXY"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:src="@drawable/user" />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_gravity="center_vertical"
                    android:layout_weight="3">
                    <TextView
                        android:id="@+id/teacher_nameId"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="top"
                        android:maxLines="2"
                        android:textStyle="bold"
                        android:textColor="@color/colorAccent"
                        style="@style/TextAppearance.AppCompat.Medium"
                        />
                    <TextView
                        android:id="@+id/teacher_subId"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="bottom"
                        android:maxLines="1"
                        android:textColor="@color/black"
                        style="@style/TextAppearance.AppCompat.Title"
                        />
                    <TextView
                        android:id="@+id/teacher_rankId"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="bottom"
                        android:maxLines="1"
                        android:textColor="@color/black"
                        style="@style/TextAppearance.AppCompat.Small"
                        android:text=""/>
                    <TextView
                        android:id="@+id/teacher_degreeId"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="bottom"
                        android:maxLines="1"
                        android:textColor="@color/black"
                        style="@style/TextAppearance.AppCompat.Small"
                        android:text=""/>
                </LinearLayout>
            </LinearLayout>
        </androidx.cardview.widget.CardView>
        <LinearLayout
            android:layout_below="@+id/teacher_info_card"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                style="@style/home_card2"
                android:layout_marginTop="4dp"
                android:layout_height="wrap_content">
                <ImageView
                    android:id="@+id/teacher_gmailId"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:src="@drawable/gmail"
                    android:layout_gravity="bottom"
                    android:padding="5dp"/>
            </androidx.cardview.widget.CardView>
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                style="@style/home_card2"
                android:layout_marginTop="4dp"
                android:layout_height="wrap_content">
                <ImageView
                    android:id="@+id/teacher_wpId"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:src="@drawable/whatsapp"
                    android:layout_gravity="bottom"
                    android:layout_marginStart="4dp"
                    android:padding="5dp"/>
            </androidx.cardview.widget.CardView>

        </LinearLayout>
    </RelativeLayout>
</RelativeLayout>