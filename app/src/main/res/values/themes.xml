<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Engineers" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Primary brand color. -->
        <item name="android:windowNoTitle">true</item>
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowAnimationStyle">@style/WindowAnimationTransition</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="WindowAnimationTransition">
        <item name="android:windowEnterAnimation">@android:anim/fade_in</item>
        <item name="android:windowExitAnimation">@android:anim/fade_out</item>
    </style>


    <style name="CollapsingStyle" parent="Theme.Engineers">
        <item name="android:textColor">@android:color/transparent</item>
        <item name="android:textSize">0sp</item>
    </style>

    <style name="style_1">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">#2196F3</item>
        <item name="android:textSize">12sp</item>
        <item name="android:layout_marginTop">10dp</item>
        <item name="android:textAppearance">@android:style/TextAppearance.Large</item>
    </style>

    <style name="style_2">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">12sp</item>
        <item name="paddingStart">4dp</item>
        <item name="paddingEnd">4dp</item>
        <item name="android:textAppearance">@android:style/TextAppearance.Small</item>
    </style>

    <style name="Theme.Engineers.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="edt1">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:inputType">text</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">16sp</item>
        <item name="android:background">@color/background</item>
    </style>

    <style name="routine_text_style">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:layout_margin">0.5dp</item>
        <item name="android:textSize">12sp</item>
        <item name="android:background">@color/colorPrimary</item>
    </style>

    <style name="routine_time_style">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/yellow</item>
        <item name="android:layout_margin">0.5dp</item>
        <item name="android:textSize">12sp</item>
        <item name="android:background">@color/copper</item>
        <item name="android:text">08:45\n09:30</item>
    </style>

    <style name="cgpa_card">
        <item name="cardBackgroundColor">@color/background</item>
        <item name="android:layout_margin">8dp</item>
        <item name="strokeWidth">1dp</item>
        <item name="android:layout_width">0dp</item>
        <item name="cardElevation" tools:ignore="PrivateResource">
            @dimen/cardview_default_elevation
        </item>
        <item name="cardCornerRadius" tools:ignore="PrivateResource">
            @dimen/cardview_default_radius
        </item>
        <item name="android:layout_weight">1</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:layout_height">match_parent</item>
    </style>

    <style name="cgpa_input_layout">
        <item name="paddingStart">10dp</item>
        <item name="android:textColorHint">@color/gray</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
    </style>

    <style name="cgpa_edt">
        <item name="background">@color/background</item>
        <item name="android:maxLength">4</item>
        <item name="android:textSize">16sp</item>
        <item name="android:paddingStart">10dp</item>
        <item name="android:paddingBottom">10dp</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:inputType">numberDecimal</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
    </style>

    <style name="card_style">
        <item name="android:layout_weight">1</item>
        <item name="android:foreground">?android:attr/selectableItemBackground</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_marginStart">8dp</item>
        <item name="android:layout_marginEnd">4dp</item>
        <item name="android:layout_marginBottom">8dp</item>
        <item name="cardElevation" tools:ignore="PrivateResource">
            @dimen/cardview_default_elevation
        </item>
        <item name="cardCornerRadius" tools:ignore="PrivateResource">
            @dimen/cardview_default_radius
        </item>
        <item name="android:layout_height">match_parent</item>
    </style>

    <style name="home_card">
        <item name="android:layout_weight">1</item>
        <item name="android:layout_marginStart">8dp</item>
        <item name="android:layout_marginEnd">4dp</item>
        <item name="android:layout_marginTop">2dp</item>
        <item name="android:layout_marginBottom">8dp</item>
        <item name="android:layout_width">0dp</item>
        <item name="cardBackgroundColor">@color/card_back</item>
        <item name="android:textColor">@color/black</item>
        <item name="cardElevation" tools:ignore="PrivateResource">
            @dimen/cardview_default_elevation
        </item>
        <item name="cardCornerRadius" tools:ignore="PrivateResource">
            @dimen/cardview_default_radius
        </item>
        <item name="android:layout_height">match_parent</item>
    </style>

    <style name="home_card2">
        <item name="cardBackgroundColor">@color/card_back</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_marginStart">4dp</item>
        <item name="android:layout_marginTop">2dp</item>
        <item name="android:layout_marginEnd">4dp</item>
        <item name="android:layout_marginBottom">8dp</item>
        <item name="cardElevation" tools:ignore="PrivateResource">
            @dimen/cardview_default_elevation
        </item>
        <item name="cardCornerRadius" tools:ignore="PrivateResource">
            @dimen/cardview_default_radius
        </item>
        <item name="android:layout_height">match_parent</item>
    </style>

    <style name="home_card3">
        <item name="cardBackgroundColor">@color/card_back</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_marginTop">2dp</item>
        <item name="android:layout_marginStart">4dp</item>
        <item name="android:layout_marginEnd">8dp</item>
        <item name="android:layout_marginBottom">8dp</item>
        <item name="cardElevation" tools:ignore="PrivateResource">
            @dimen/cardview_default_elevation
        </item>
        <item name="cardCornerRadius" tools:ignore="PrivateResource">
            @dimen/cardview_default_radius
        </item>
        <item name="android:layout_height">match_parent</item>
    </style>

    <style name="home_card4">
        <item name="cardBackgroundColor">@color/card_back</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:layout_height">150dp</item>
        <item name="android:layout_width">150dp</item>
        <item name="android:layout_marginStart">4dp</item>
        <item name="android:layout_marginEnd">4dp</item>
        <item name="android:layout_marginBottom">8dp</item>
        <item name="cardElevation" tools:ignore="PrivateResource">
            @dimen/cardview_default_elevation
        </item>
        <item name="cardCornerRadius" tools:ignore="PrivateResource">
            @dimen/cardview_default_radius
        </item>
    </style>

    <style name="myBottomNavigationStyle">
        <item name="background">@color/gray</item>
        <item name="itemIconTint">@drawable/bottom_navigation_color</item>
        <item name="itemTextColor">@drawable/bottom_navigation_color</item>
    </style>

    <style name="Theme.Engineers.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.Engineers.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />
</resources>